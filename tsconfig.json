{
  "compilerOptions": {
    "target": "ES2021",                               
    "module": "commonjs",    
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],                         
    "lib": [
      "ESNext",
      "ES6"
    ],
    "outDir": "dist",    
    "rootDir": "src",
    "esModuleInterop": true,   
    "allowJs": true,                       
    "forceConsistentCasingInFileNames": true,         
    "strict": true,                                   
    "skipLibCheck": true   ,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "declarationDir": "dist/@types",
    "declaration": true                      
  }
}
